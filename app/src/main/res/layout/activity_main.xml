<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainActivity"
    tools:context="com.crud.edwar.micrudandroidstudio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/consult_usuarios_listView"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/consult_usuarios_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@color/verde"

            android:text="@string/consult_usuarios_listView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/consultar_usuarios"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/registrar_usuario"
            android:layout_below="@+id/registrar_usuario"
            android:layout_marginTop="49dp"
            android:background="@color/azul"
            android:onClick="onClick"
            android:text="@string/consultar_usuarios"
            android:textSize="18sp" />

        <Button
            android:id="@+id/registrar_usuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/consult_usuarios_listView"
            android:layout_marginTop="43dp"
            android:background="@color/amarillo"

            android:onClick="onClick"
            android:text="@string/registro_usuarios"
            android:textSize="18sp" />


        <Button
            android:id="@+id/consult_usuarios_spinner"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/consultar_usuarios"
            android:layout_below="@+id/consultar_usuarios"
            android:layout_marginTop="45dp"
            android:background="@color/rojo"
            android:onClick="onClick"
            android:text="@string/consult_usuarios_spinner"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
