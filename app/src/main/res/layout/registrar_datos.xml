<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainActivity"
    tools:context="com.crud.edwar.micrudandroidstudio.registrar_usuarios">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lbl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="35dp"
            android:text="ID"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_id"
            android:layout_below="@+id/txt_id"
            android:layout_marginTop="29dp"
            android:text="Nombre"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lbl_id"
            android:layout_below="@+id/lbl_id"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lbl_nombre"
            android:layout_below="@+id/lbl_nombre"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lbl_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_nombre"
            android:layout_below="@+id/txt_nombre"
            android:layout_marginTop="34dp"
            android:text="Telefono"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_telefono"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lbl_telefono"
            android:layout_below="@+id/lbl_telefono"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="phone" />

        <ImageButton
            android:id="@+id/img_btn_atras"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="22dp"
            android:onClick="onClick"

            app:srcCompat="@mipmap/back_icon" />

        <Button
            android:id="@+id/btn_reg_datos"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/txt_telefono"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="@string/btn_reg_datos" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>